                    <ul class="nav navbar-nav navbar-right">
                        <button class="btn btn-sm btn-default" type="button" id="maximize-button"><span id="maximize-icon" class="icon-fullscreen"></span></button>
                    </ul>
                }
            </div>
        </nav>
    </div>
</div>