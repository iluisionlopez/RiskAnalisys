@model CSRToolWebApp.Models.TerritoryModel

@{

    ViewBag.Title = "Add Territory";
    Layout = "~/Views/Shared/Layouts/_PopUpLayout.cshtml";

}

@section ModalTitle
{
    <h2>@ViewBag.Title</h2>
}

@using (Html.BeginForm("Save", "Territory", new { @class = "form-horizontal", role = "form" }))
{

    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.TerritoryTypeId)

    <div class="row">
        <div class="col-xs-12">
            <div class="form-group">
                @Html.LabelFor(model => model.Name, new { @class = "col-sm-4 control-label" })
                <div class="col-sm-8">
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control", autocomplete = "off", @maxlength = "50" })
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <div class="form-group">
                @Html.LabelFor(model => model.ShortName, new { @class = "col-sm-4 control-label" })
                <div class="col-sm-8">
                    @Html.TextBoxFor(model => model.ShortName, new { @class = "form-control", autocomplete = "off", @maxlength = "50" })
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <div class="form-group">
                @Html.LabelFor(model => model.TerritoryType, new { @class = "col-sm-4 control-label" })
                <div class="col-sm-8">
                    @Html.TextBoxFor(model => model.TerritoryType, new { @class = "form-control", autocomplete = "off" })
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <div class="form-group">
                @Html.LabelFor(model => model.IsActive, new { @class = "col-sm-4 control-label" })
                <div class="col-sm-8">
                    @Html.CheckBoxFor(model => model.IsActive)
                </div>
            </div>
        </div>
    </div>
    
    <div class="row"><div class="col-xs-12"><hr /></div></div>
    <div class="row">

        <div class="col-xs-11">
            <button class="btn btn-default btn-primary" type="button" data-dismiss="modal">Close</button>
            <button class="btn btn-default btn-primary" type="submit">Save</button>
        </div>

    </div>
}

